#_page_4.frame(ng-controller='SettingsController')
	.input-control.select
		select(ng-model='selectLang', ng-options='selectLang for selectLang in languages', ng-change='freshLanguage(selectLang)')
	.grid.fluid
		.row.cells2
			.cell
				.row.condensed
					.input-control.checkbox(data-role='input-control')
						label
							input(type='checkbox', ng-model='settings.sound')
							span.check
							span.leaf Произношение
				.row.condensed
					.input-control.checkbox(data-role='input-control')
						label
							input(type='checkbox', ng-model='settings.color')
							span.check
							span.leaf Расскаска слогов по тонам
				.row.condensed
					.input-control.checkbox(data-role='input-control')
						label
							input(type='checkbox', ng-model='settings.number')
							span.check
							span.leaf Цифры тонов
				.row.condensed
					.input-control.checkbox(data-role='input-control')
						label
							input(type='checkbox', ng-model='settings.letter')
							span.check
							span.leaf Подчёркивания
			.cell
				.pinyin
					span(style='font-size: xx-large; color:{{tone.color}}', ng-repeat='tone in example')
						span(ng-hide='settings.letter') {{tone.pinyin}}
						span(ng-show='settings.letter') {{tone.transpinyin}}
						span(ng-show='settings.number') {{tone.number}}
